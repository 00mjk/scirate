<% provide :title, "Search results" %>

<h1>Search results<% if params[:q] %>for "<%= params[:q] %>"<% end %></h1>

<% unless @authors.nil? || @authors.empty? %>
  Matching authors: <% @authors.each do |author| %>
    <%= link_to author.fullname, "/search?q=au:#{author.searchterm}" %><% unless author == @authors[-1] %>,<% end %>
  <% end %>

<% end %>

<div class="paperlist">
<ul class="papers">
  <% if @papers.empty? %>
    No papers found.
  <% else %>
    <%= render @papers %>
  <% end %>
</ul>
</div>

<%= will_paginate @papers %>
