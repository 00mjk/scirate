<tr>
  <td class="title">
    <h1>
      <%= @paper.identifier %><br />
      <%= @paper.title %>
    </h1>
    <%= @paper.authors.join(', ') %>
  </td>
</tr>
<tr>
  <td class="abstract">
    <%= @paper.abstract %>
  </td>
</tr>  
<tr>
  <td>
    Published on <%= @paper.pubdate.to_formatted_s(:rfc822) %><br />
    <% if @paper.updated? %>
    Updated on <%= @paper.updated_date.to_formatted_s(:rfc822) %><br />
    <% end %>
    <%= link_to @paper.url, @paper.url %>
  </td>
</tr>
