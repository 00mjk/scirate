<% provide :title, @paper.identifier %>
<div class="row paper">
<div class="span10 tex2jax">
  <h1 class="title"><%= sanitize(@paper.title) %></h1>
  <ul class="authors">
    <% @paper.authors.each do |author| %>
      <li><a href="/search?q=au:<%=author.searchterm%>"><%= sanitize(author.fullname) %><% if author != @paper.authors[-1] %>,<% end %></a></li>
    <% end %>
  </ul>
  <div class="abstract">
    <%= @paper.abstract %>
  </div>
  <% if @categories.length > 0 %>
    <div class="categories">
      Subjects:
      <strong><%= @paper.feed.name %></strong>
      <% @categories.each do |c| %>
        <%= c.name %>
      <% end %>
    </div>
  <% end %>
  <div class="dates">
    Published <%= @paper.pubdate.to_formatted_s(:rfc822) %> in <%= link_to @paper.feed.name, @paper.feed %>
    <% if @paper.updated? %>
      Updated <%= @paper.updated_date.to_formatted_s(:rfc822) %><br />
    <% end %>
  </div>
  <div class="comments">
    <a name="comments"></a>
    <h4><%= pluralize(@comments.size, "comments") %></h4>
    <% if flash[:comment] %>
      <%= content_tag(:div, flash[:comment][:content], class: "flash #{flash[:comment][:status]}") %>
    <% end %>
    <%= render @comments %>
  </div>
  <div class="comment_form">
    <% if signed_in? %>
      <%= render 'comment_form' %>
    <% else %>
      <%= link_to "sign in to comment", signin_path() %>
    <% end %>
  </div>
</div>
<div class="span2 paper-sidebar">
  <span class="scite-toggle">
    <%= render(partial: 'scite_form', object: @paper, as: :paper) %>
  </span>
</div>
</div>
