<% provide :title, @paper.identifier %>
<div class="paper">
  <div class="title">
    <%= @paper.title %>
  </div>
  <div class="authors">
    <%= @paper.authors.join(', ') %>
  </div>
  <div class="identifier">
    <%= @paper.identifier %>
    [<%= @paper.feed.name %>]
  </div>
  <div class="abstract">
    <%= @paper.abstract %>
  </div>
  <div class="dates">
    Published on <%= @paper.pubdate.to_formatted_s(:rfc822) %><br />
    <% if @paper.updated? %>
      Updated on <%= @paper.updated_date.to_formatted_s(:rfc822) %><br />
    <% end %>
    <%= link_to @paper.url, @paper.url %>
  </div>
  <div class="scites">
    <%= render( partial: 'scite_form', object: @paper, as: :paper ) if signed_in? %>
    <%= render 'sciters' %>
  </div>
  <div class="comments">
    <a name="comments"></a>
    <%= render 'comments' %>
  </div>
  <div class="comment_form">
    <%= render 'comment_form' if signed_in? %>
  </div>
