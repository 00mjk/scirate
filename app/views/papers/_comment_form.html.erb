<div id="comment_form">
<%= form_for(current_user.comments.build(paper_id: @paper.id)) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div><%= f.hidden_field :paper_id %></div>
  <div class="field">
    <%= f.label :Comment %><br />
    <p>Comments support <a href="http://daringfireball.net/projects/markdown/syntax">Markdown</a> formatting and <a href="#" class="has-tooltip" data-toggle="tooltip" title="Use $ for inline and $$ for displayed equations.">math mode LaTeX</a>.</p>
    <div class="wmd-panel">
      <div id="wmd-button-bar"></div>
      <%= f.text_area :content, :id => 'wmd-input', :class => 'wmd-input' %>
    </div>
    <div id="wmd-preview" class="wmd-panel wmd-preview well"></div>
  </div>
  <%= f.submit "Leave Comment", :class => "btn btn-large btn-primary" %>
  <% end %>
</div>

<div id="comment_editor" class="hidden">
  <div class="wmd-panel">
    <div id="wmd-button-bar-second"></div>
    <textarea id="wmd-input-second" class="wmd-input"></textarea>
  </div>
  <div id="wmd-preview-second" class="wmd-panel wmd-preview well"></div>
  <button class="save btn btn-success">Save Changes</button>
</div>
