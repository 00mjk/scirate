<li class="paper">
  <table class="paper">
    <tr>
      <td class="scite">
        <%= render( partial: 'scite_form', object: paper, as: :paper) if signed_in? %>
        <%= pluralize(paper.scites.size, 'Scite') %><br />
        <%= link_to(pluralize(paper.comments.size, 'Comment'),
                            paper_path(paper, anchor: "comments")) if paper.comments.size > 0 %>
      </td>
      <td class="title">
        <%= link_to paper.identifier, paper %><br />
        <%= paper.title %><br />
        <%= paper.authors.join(', ') %>
      </td>
    </tr>
    <% if paper.scites.size > 0 %>
      <tr>
        <td class="abstract" colspan="2">
          <%= paper.abstract %>
        </td>
      </tr>
    <% end %>
  </table>
</li>
