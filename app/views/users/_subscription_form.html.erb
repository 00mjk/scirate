<%= form_tag "/subscriptions", method: :put, remote: false do %>
  <% for feed in @feeds %>
    <div class="subscription_checkbox">
      <%= check_box_tag "feed_ids[]", feed.id, @user.subscribed?(feed), id: feed.name %>
      <%= label_tag feed.id, feed.name %>
    </div>
    <% end %>
    <%= submit_tag "Submit", :class => "btn btn-large btn-primary" %>
<% end %>
